/**index.wxss**/
@import "/css/iconfont/iconfont.wxss";

page {
  background: #f2f2f2;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

scroll-view{
  height: 100%;
  width: 100%;
}

.search-wrap {
  position: fixed;
  z-index: 99;
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  color: #fff;
}

.search-box-cover {
  background: rgb(255, 255, 255, 0);
  width: 100%;
  height: 90rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}

.search-location {
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 22rpx;
  font-size: 26rpx;
  overflow: hidden;
}

.search {
  flex-grow: 1;
  margin: 15rpx 24rpx;
  position:relative;
}
.search__form{
  background: #FFF;
}

.search-icon {
  width: 44rpx;
  height: 90rpx;
  line-height: 90rpx;
  position:relative;
}

.scan {
  margin-left: 22rpx;
}

.msg {
  margin-right: 22rpx;
}

.ad-load {
  height: 400rpx;
}

.slide-image {
  width: 100%;
  display: block;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

.pindao-grid {
  display: block;
  float: left;
  width: 20%;
  height: 50%;
  text-align: center;
}

.pindao-grid__pic {
  width: 45rpx;
  height: 45rpx;
  margin: 15rpx;
}

.pindao-grid__text {
  text-align: center;
  font-size: 24rpx;
}
.pindao-indicatorDots{
  text-align: center;
}
.pindao-indicatorDots i {
    font-size: 24rpx;
    font-weight: bold;
    color: #808080;
}
.news {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.news-left {
  float: left;
  width: 20%;
}

.news-center {
  float: left;
  width: 70%;
  height: 80rpx;
}

.news-swiper {
  height: 100%;
}

.news-right {
  float: left;
  width: 10%;
}

.models,.products{
  text-align: center;
}

.models-title,.products-title {
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  font-family: "microsoft yahei";
  background-image: -webkit-gradient(linear, left center, right center, from(rgba(176, 31, 184, 1)), to(rgba(255, 89, 76, 1)));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.models-pic image{
  width: 100%;
}

.products .productdetail {
  position: relative;
  float: left;
  width:50%;
  height:600rpx;
  text-align: center;
}

.products .productdetail image{
    width: 96%;
    height: 456rpx;
    margin: 0 2%;
}
.products .productdetail text{
    display:block;
    color: #595d65;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
}

.products .productdetail:after, .products .productdetail:before {
    content: " ";
    position: absolute;
    right: 0;
    bottom: 0;
    color: #d9d9d9;
}
.products .productdetail:before {
    top: 0;
    width: 1px;
    border-right: 1px solid #d9d9d9;
    -webkit-transform-origin: 100% 0;
    transform-origin: 100% 0;
    -webkit-transform: scaleX(.5);
    transform: scaleX(.5);
}
.products .productdetail:after {
    left: 0;
    height: 1px;
    border-bottom: 1px solid #d9d9d9;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}

#goToTop {
    position: fixed;
    bottom: 100rpx;
    right: 5%;
    display: none; 
}
#goToTop a {
    text-align: center;
    text-decoration: none;
    color: #d1d1d1;
    display: block;
    width: 60rpx;
    -moz-transition: color1s;
    -webkit-transition: color1s;
    -o-transition: color1s;
}
#goToTop i {
    font-size: 60rpx;
}

scroll-view {
  z-index: 0;
}