.search-wrap {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  color: #fff;
  background: #f6f6f6;
}

.search {
  flex: 1;
  margin-left: 24rpx;
}

.search__clear {
  right: 0rpx;
  width: 80rpx;
}

.search-ad, .search-history {
  margin-top: 20rpx;
  clear: both;
}

.search-ad text {
  padding: 5rpx 20rpx;
  margin: 20rpx;
  float: left;
  font-size: 28rpx;
  background-color: #eee;
  border-radius: 30rpx;
}

.search-history text {
  width: 100%;
  display: block;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1px solid #ccc;
  padding: 10rpx 0;
}

.clearHistroy {
  width: 40%;
  border-radius: 20rpx;
  margin-top: 40rpx;
  background: none;
  border: 1px solid #ccc;
}
